<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="658dp"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp" />

    <Button
        android:id="@+id/TalkRoomListButton"
        android:layout_width="84dp"
        android:layout_height="72dp"
        android:layout_marginTop="658dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/main_fragment_border"
        app:backgroundTint="#32C1ED"/>

    <Button
        android:id="@+id/TalkRoomListHasNoticeButton"
        android:layout_width="84dp"
        android:layout_height="73dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="658dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="#FF7700"
        app:backgroundTint="#32C1ED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/TalkRoomListButton"
        app:layout_constraintStart_toEndOf="@+id/AddDialogueButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/AddDialogueButton"
        android:layout_width="84dp"
        android:layout_height="73dp"
        android:layout_marginTop="658dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="164dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/TalkRoomListHasNoticeButton"
        app:layout_constraintStart_toEndOf="@+id/MakeGroupButton"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/main_fragment_border"
        app:backgroundTint="#32C1ED"/>

    <Button
        android:id="@+id/MakeGroupButton"
        android:layout_width="84dp"
        android:layout_height="73dp"
        android:layout_marginTop="659dp"
        android:layout_marginBottom="0dp"
        android:layout_marginStart="248dp"
        android:layout_marginEnd="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/AddDialogueButton"
        app:layout_constraintStart_toEndOf="@+id/UserConfigButton"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/main_fragment_border"
        app:backgroundTint="#32C1ED"/>

    <Button
        android:id="@+id/UserConfigButton"
        android:layout_width="84dp"
        android:layout_height="73dp"
        android:layout_marginStart="332dp"
        android:layout_marginTop="659dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="360dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/MakeGroupButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/main_fragment_border"
        app:backgroundTint="#32C1ED"/>

</FrameLayout>